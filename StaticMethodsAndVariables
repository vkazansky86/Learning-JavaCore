
public class StaticMethodsandVariables {
	static int counter = 0;
	

	
	public static void main(String[] args) {
		plusPlus();
		plusPlus();
		plusPlus();
		plusPlus();
		System.out.println(counter);
	}
	
	private static void plusPlus() {
		counter++;
	}
}
