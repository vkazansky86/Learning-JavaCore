package Homeworks;

public class Homework12 {

	public static void main(String[] args) {
    
    for(int i = 0; i < 100; i++) {
    	
    	if (i % 2 == 0) {
    		doItSomething();
    	} 
    	
      }

	} 
	
	private static void doItSomething() {
		
		System.out.println("i do something");
		
    }

}
