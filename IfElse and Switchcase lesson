package Homeworks;

public static void main(String[] args) {
		
		String CharacterName = "Tyler";
		
		switch(CharacterName) {
		case "Sheriff":
			System.out.println("Sheriff");
			break;
		case "Thief":
			System.out.println("Thief");
			break;
		case "Bandit":
			System.out.println("Bandit");
			break;
		default: 
			System.out.println("Civilian");
		   }	
    }
}

